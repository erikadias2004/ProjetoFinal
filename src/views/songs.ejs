<!DOCTYPE html>
<html>
<head>
  <title>Songs</title>
  <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>
<body>
  <nav>
    <ul>
      <li><a href="/artistas">Artistas</a></li>
      <li><a href="/songs">Músicas</a></li>
      <li><a href="/albums">Álbuns</a></li>
    </ul>
  </nav>

  <div class="container">
    <h1>Songs</h1>
    <form action="/songs/create" method="POST">
      <input type="text" name="title" placeholder="Song Title">
      <button type="submit">Add Song</button>
    </form>
    <ul>
      <% songs.forEach(song => { %>
        <li>
          <form action="/songs/update/<%= song.id %>" method="POST" style="display: inline;">
            <input type="text" name="title" value="<%= song.title %>">
            <button type="submit">Update</button>
          </form>
          <form action="/songs/delete/<%= song.id %>" method="POST" style="display: inline;">
            <button type="submit">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
  </div>

</body>
</html>